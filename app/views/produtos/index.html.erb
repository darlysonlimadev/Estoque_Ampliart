<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice" class="alert alert-info"><%= notice %></p>

      <h1>Produtos</h1>

      <%= form_tag produtos_path, method: :get, class: "form-inline mb-3" do %>
        <div class="input-group">
          <%= text_field_tag :nome_search, params[:nome_search], class: "form-control search-input", placeholder: "Pesquisar por nome..." %>
          <%= text_field_tag :codigo_search, params[:codigo_search], class: "form-control search-input", placeholder: "Pesquisar por código..." %>
          <%= text_field_tag :categoria_search, params[:categoria_search], class: "form-control search-input", placeholder: "Pesquisar por categoria..." %>
          <div class="input-group-append">
            <%= submit_tag "Pesquisar", class: "btn btn-primary" %>
            <%= link_to "Limpar", produtos_path, class: "btn btn-secondary" %>
          </div>
        </div>
      <% end %>             

      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Nome</th>
            <th>Código</th>
            <th>Categoria</th>
            <th>Quantidade</th>
            <th>Preço</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @produtos.each do |produto| %>
            <tr>
              <td><%= produto.nome %></td>
              <td><%= produto.codigo %></td>
              <td><%= produto.categoria %></td>
              <td><%= produto.quantidade %></td>
              <td><%= produto.preco %></td>
              <td><%= link_to 'Show', produto, class: 'btn btn-primary' %></td>
              <td><%= link_to 'Edit', edit_produto_path(produto), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', produto, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Produto', new_produto_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
